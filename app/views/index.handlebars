<h1>Burgers</h1>

<section class="float-left">
    <h2>Burgers not devoured</h2>
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burger-block devoured=true}}
            {{/unless}}
        {{/each}}
    </ul>
</section>
<section class="float-right">
    <h2>Burgers devoured</h2>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{>burger-block devoured=false}}
            {{/if}}
        {{/each}}
    </ul>
</section>